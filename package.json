{
  "name": "neko-cli-rock",
  "displayName": "neko-cli-rock",
  "description": "Support and formatting for Neko-CLI's neko.rock files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/UnStackss/neko-cli-rock.git"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Neko-CLI",
  "activationEvents": [
    "onLanguage:neko"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "neko",
        "aliases": [
          "Neko",
          "neko.rock"
        ],
        "extensions": [
          ".rock"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "filesAssociations": [
      {
        "pattern": "**/*.rock",
        "icon": "images/neko-icon.png"
      }
    ]
  },
  "grammars": [
    {
      "language": "neko",
      "scopeName": "source.neko",
      "path": "./syntaxes/neko.tmLanguage.json"
    }
  ],
  "commands": [
    {
      "command": "extension.formatNeko",
      "title": "Format Neko"
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
